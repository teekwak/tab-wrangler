{
  "name": "Shifter",
  "version": "0.0.1",
  "description": "Switch between open tabs",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "mac": "Ctrl+B",
        "windows": "Ctrl+B",
        "linux": "Ctrl+B"
      }
    },
    "_execute_page_action": {
      "suggested_key": {
        "mac": "Ctrl+B",
        "windows": "Ctrl+B",
        "linux": "Ctrl+B"
      }
    }
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  }
}